Type: Package
Package: kfre
Title: Title: Kidney Failure Risk Equation (KFRE) Tools
Version: 0.0.3
Authors@R:
    c(person("Leonid", "Shpaner",
             email = "lshpaner@ucla.edu",
             role = c("aut","cre"),
             comment = c(
               ORCID = "0009-0007-5311-8095",
